<h1><%= @player.name %></h1>

<p>Games: <%= @player.total_games %>
<p>Runs: <%= @player.total_runs %></p>
<p>Not Outs: <%= @player.total_not_outs %></p>
<% if @player.total_games > 0 %>
  <p>Average: <%= (@player.total_runs / (@player.total_games - @player.total_not_outs)).to_f %></p>
<% end %>

<p>Batting Rating: <%= @player.bat__rating %></p>
<div class="controls">
  <%= link_to 'Edit player', edit_player_path(@player) %>
</div>
